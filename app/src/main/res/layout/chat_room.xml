<!-- activity_chat_room_list.xml -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Title -->
    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="채팅방 목록"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="16dp" />

    <!-- Chat room list -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/linear_layout_chat_rooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Sample chat room item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <!-- Profile image -->
                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_profile"
                    android:scaleType="centerCrop"
                    android:padding="8dp"/>

                <!-- Chat room details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Chat room name -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="채팅방 이름"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <!-- Last message -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="마지막 메시지"
                        android:textSize="14sp"/>

                    <!-- Enter button -->
                    <Button
                        android:id="@+id/button_enter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="입장"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#000000"
                        android:onClick="goToChatFragment"/>

                </LinearLayout>
            </LinearLayout>

            <!-- Add more chat room items here -->

        </LinearLayout>
    </ScrollView>

    <!-- Button to add new chat room -->
    <Button
        android:id="@+id/button_add_chat_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="새로운 채팅방 추가"
        android:layout_margin="16dp"/>

</LinearLayout>